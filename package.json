{
  "name": "mailpipe",
  "version": "1.0.0",
  "description": "Mail app for inbox-zero freaks",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch & npm run copy & npm run livereload & npm run server",
    "test": "mocha -R nyan -w --check-leaks",
    "watch": "watchify app/entry.js -t 6to5ify -o build/app.js & stylus -w app/styles/mailpipe.styl -o build",
    "copy": "cp app/index.html build/index.html",
    "server": "static build",
    "livereload": "livereloadify build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asbjornenge/mailpipe.git"
  },
  "keywords": [
    "mail",
    "app",
    "react"
  ],
  "author": "Asbjorn Enge <asbjorn@hanafjedle.net>",
  "license": "BSD",
  "bugs": {
    "url": "https://github.com/asbjornenge/mailpipe/issues"
  },
  "homepage": "https://github.com/asbjornenge/mailpipe",
  "dependencies": {
    "fluxify": "^0.2.1",
    "react": "^0.12.2"
  },
  "devDependencies": {
    "6to5ify": "^3.1.2"
  }
}
