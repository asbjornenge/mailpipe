{
  "name": "mailpipe",
  "version": "1.0.0",
  "description": "Mail app for inbox-zero freaks",
  "main": "app/index.html",
  "scripts": {
    "start": "npm run copy & npm run copyGraphics & npm run watch & npm run stylus & npm run static & npm run livereload",
    "test": "mocha -R nyan -w --check-leaks",
    "watch": "watchify app/app.js -t 6to5ify -o build/app.js",
    "livereload": "livereloadify build --glob '**/**'",
    "stylus": "stylus -w app/styles/app.styl -o build",
    "static": "static build",
    "copy": "cp app/index.html build/index.html",
    "copyGraphics": "cp -r app/graphics build/graphics"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asbjornenge/mailpipe.git"
  },
  "keywords": [
    "mail",
    "app",
    "react"
  ],
  "author": "Asbjorn Enge <asbjorn@hanafjedle.net>",
  "license": "BSD",
  "bugs": {
    "url": "https://github.com/asbjornenge/mailpipe/issues"
  },
  "homepage": "https://github.com/asbjornenge/mailpipe",
  "dependencies": {
    "combokeys": "^2.3.0",
    "contextio": "^0.4.0",
    "firebase": "^2.1.1",
    "flummox": "^2.13.0",
    "flux": "^2.0.1",
    "fluxify": "^0.2.1",
    "imap": "^0.8.14",
    "jquery": "^2.1.3",
    "lodash": "^2.4.1",
    "moment": "^2.9.0",
    "open": "0.0.5",
    "react": "^0.13.0-rc2",
    "tcomb-form": "^0.3.0-rc2"
  },
  "devDependencies": {
    "6to5ify": "^3.1.2"
  }
}
