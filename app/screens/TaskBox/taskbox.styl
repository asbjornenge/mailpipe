.TaskBox
    flex auto
    overflow auto

    .actions
        display flex
        justify-content flex-end
        button
            background none
            border none
            color white
            font-size 2em
            &:focus
                outline 0

    .form
        padding 10px
        padding-bottom 0

        fieldset
            padding 0
            margin 0
            border 0

        input
            color white
            background-color black
            border 1px solid #ccc
            width 100%
            height 40px
            line-height 40px
            font-size 1.15em
            text-indent 5px

        .groupFilterBox
            height 32px
            max-width 100px
            line-height 32px
            border 1px solid #ccc 
            position absolute
            top 71px
            right 8px
            padding 5px
            overflow hidden
            background-color #ccc
            color black

        button
            margin-top 10px
            background-color black
            color white
            border 1px solid #ccc
            width 50px
            height 30px

    .list
        .TaskBoxItem
            display block
            padding 10px
            border 1px solid transparent
            border-bottom 1px solid #ccc
            height 86px
            overflow hidden

            &.selected
                border 1px solid red

            .date
                float right

            .participants
                span
                    margin-right 10px

            .name
                color white
                font-weight bold
                margin-top 5px
                margin-bottom 5px

    .Postponer

        .shader
            position fixed
            top 0
            left 0
            right 0
            bottom 0
            z-index 998
            background-color black
            opacity 0.7

        .PostponerInner
            position fixed
            top 0
            left 0
            right 0
            bottom 0
            z-index 999

        .centerbox
            width 320px
            margin auto
            margin-top 200px
            background-color black
            border 1px solid blue

            .info
                color white
                font-weight bold
                padding 10px
                text-align center

            .selectorbox
                display flex
                flex-wrap wrap
                margin-left 10px
                margin-right 10px
                padding-bottom 10px

                .selection
                    width 88px
                    height 88px
                    border 1px solid pink
                    flex-shrink 0
                    margin 5px

                    &.selected
                        border 1px solid red

    .Grouper

        .shader
            position fixed
            top 0
            left 0
            right 0
            bottom 0
            z-index 998
            background-color black
            opacity 0.7

        .GrouperInner
            position fixed
            top 0
            left 0
            right 0
            bottom 0
            z-index 999

        .centerbox
            width 320px
            margin auto
            margin-top 200px
            background-color black
            border 1px solid blue

            .info
                color white
                font-weight bold
                padding 10px
                text-align center

            .selectorbox
                margin-left 10px
                margin-right 10px
                padding-bottom 10px

                .group
                    display block
                    height 30px
                    border 1px solid pink
                    flex-shrink 0
                    margin 5px

                    &.selected
                        border 1px solid red

    .TaskBoxSidebar
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        display flex
        flex-direction column

        .groups
            flex auto

        ul
            margin 0
            padding 0
            li
                height 40px
                line-height 40px
                list-style none
                text-indent 5px
                cursor pointer
                border-bottom 1px solid #ccc
                &.header
                    background-color #ccc
                    color black
                &.separator
                    background-color #ccc
                    color black

        .settingsLink
            border 1px solid red
            height 40px
            line-height 40px
            text-indent 5px
            cursor pointer
