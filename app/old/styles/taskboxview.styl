@import "variables"

.TaskBoxView
    margin auto
    padding 0
    position fixed
    top 51px
    bottom 0
    left 0
    right 0
    overflow scroll
    max-width $max-width 

    .TaskBoxItem
        padding 0
        margin 0
        list-style none
        height 90px
        padding-top 5px
        padding-bottom 5px
        border-bottom 1px solid $border-color 
    
        &.selected
            .Subject
                color $meta-color  
 
        .Meta
            color $text-color-highlight
            font-size 0.9em
    
            .Time
                color $text-color
                float right
    
        .Subject
            color $text-color-important
            white-space nowrap
            padding 0
            margin 0
            font-size 1.2em
            padding-top 2px
            padding-bottom 2px
    
        .BodySummary
            margin-top 4px
            font-size 0.9em
