@import "variables"

.TaskBoxView
    margin auto
    padding 0
    position fixed
    top 51px
    bottom 0
    left 0
    right 0
    overflow scroll
    max-width 500px

    .TaskBoxItem
        padding 0
        margin 0
        list-style none
        height 100px
        padding 10px
        border-bottom 1px solid $border-color 
    
        &.selected
            border-bottom 1px solid blue
    
        .Meta
            font-size 0.9em
    
            .Time
                float right
    
        .Subject
            color $text-color-important
            padding 0
            margin 0
            font-size 1.2em
            padding-top 2px
            padding-bottom 2px
    
        .BodySummary
            margin-top 4px
            font-size 0.9em
