@import "variables"
@import "actionbox"
@import "configurationview"
@import "taskboxview"
@import "taskview"

body
    border 0
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background-color $background-color
    color $text-color
    max-width $max-width 
    margin auto
    font-family $font-family
    font-weight 400
    font-size 18px

::-webkit-scrollbar 
    width 8px

::-webkit-scrollbar-corner
    display: none

::-webkit-scrollbar-resizer
    display: none
